<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <item android:state_enabled="false">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@color/grey50" />
            <stroke android:width="1dp" android:color="@color/grey80" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/grey200" />
        </shape>
    </item>
    <item app:state_error="true">
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/red100" tools:color="@color/grey80" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="6dp" />
            <solid android:color="@color/white" />
            <stroke android:width="1dp" android:color="@color/grey80" />
        </shape>
    </item>
</selector>
